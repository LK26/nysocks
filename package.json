{
  "name": "kcpuv",
  "version": "1.0.0",
  "description": "Kcpuv binds kcp and libuv to provide a tunnel for nodejs.",
  "main": "node/lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "babel node/src --out-dir node/lib -w",
    "build": "babel node/src --out-dir node/lib",
    "install": "node-gyp rebuild",
    "test:js": "jest",
    "test:packet": "node node/lib/__tests__/send_a_buf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://OYYD@bitbucket.org/OYYD/kcpuv.git"
  },
  "author": "oyyd <oyydoibh@gmail.com>",
  "license": "BSD",
  "gypfile": true,
  "homepage": "https://bitbucket.org/OYYD/kcpuv#readme",
  "dependencies": {
    "fecha": "^2.3.1",
    "ip": "^1.1.5",
    "ipv6": "^3.1.3",
    "nan": "^2.7.0",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^21.2.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": "airbnb-base",
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "arrow-parens": 0,
      "global-require": 0,
      "no-underscore-dangle": 0,
      "no-param-reassign": 0,
      "import/prefer-default-export": 0
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "target": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "testMatch": [
      "**/node/src/**/__tests__/**/*.spec.js"
    ]
  }
}
